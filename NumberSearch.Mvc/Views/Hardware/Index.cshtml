@model HardwareResult
@{
    ViewData["Title"] = "Hardware";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <div class="pricing-header mx-auto mb-3 text-center">
        <h1 class="display-4">Available Hardware</h1>
    </div>
    <br />
    <div class="row">
        @{
            var inCart = Model?.Cart?.ProductOrders;
            var products = Model.Products.ToArray();
            foreach (var product in products)
            {
                var quantity = 0;
                var quantityCount = inCart?.Where(x => x.ProductId == product.ProductId).FirstOrDefault();
                if ((quantityCount is not null) && (quantityCount.Quantity > 0))
                {
                    quantity = quantityCount.Quantity;
                }

                <div class="col-md-4" id="@product.Name">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@product.Image" />
                        <div class="card-body">
                            <div class="card-title">
                                <h4 class="display-4">@product.Name</h4>
                            </div>
                            <p class="card-text">@product.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <form method="get" class="input-group mb-3">
                                        @{
                                            if (quantity > 0)
                                            {
                                                <input type="number" class="form-control" name="Quantity" placeholder="Quantity" aria-label="Quantity" aria-describedby="button-addon2" value="@quantity">
                                            }
                                            else
                                            {
                                                <input type="number" class="form-control" name="Quantity" placeholder="Quantity" aria-label="Quantity" aria-describedby="button-addon2">
                                            }
                                        }
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn btn-outline-primary" asp-controller="Cart" asp-action="BuyProduct" asp-route-id="@product.ProductId" id="button-addon2">Add To Cart</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <large class="text-success">$@product.Price</large>
                        </div>
                    </div>
                </div>
            }
        }
        <br />
    </div>
    <br />
    <a type="button" class="btn btn-success btn-lg btn-block" asp-controller="Search" asp-action="Index">Add Phone Numbers ⮞</a>
    <br />
</div>