<!-- Pricing Hero-->
<section class="bg-gradient text-light pt-5 pb-7">
  <div class="container py-5 py-md-6 py-lg-7 mb-7 text-center">
    <div class="row justify-content-center">
      <div class="col-lg-10 col-md-11">
        <h1 class="display-3 text-light">Simple, fair pricing</h1>
        <p class="lead text-white">Every business has different needs, so we give you flexibility in how you pay. Choose the option that works best for your needs.</p>
      </div>
    </div>
  </div>
</section>
<!-- Pricing-->
<section class="mt-md-n14 pb-7">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10 col-md-11">
        <div class="row">
          <div class="col-sm-6 mb-grid-gutter">
            <div class="card card border-0 shadow w-100">
              <div class="card-img-top bg-light text-center pt-5 px-grid-gutter">
                <div class="d-flex justify-content-center">
                  <h3 class="text-body">Seats</h3>
                </div>
                <p class="text-body mb-0">Get multiple people talking with a single phone number for your business</p>
              </div>
              <div class="card-body px-grid-gutter py-grid-gutter">
                <div class="d-flex align-items-end py-2 px-4 mb-4"><span class="h2 fw-normal text-muted mb-1 me-2">$</span><span class="price display-2 fw-normal text-primary px-1 me-2">20</span><span class="h3 fs-lg fw-medium text-muted mb-2">per<br>month</span></div>
                <ul class="list-unstyled py-2 mb-4">
                  <li class="d-flex align-items-center mb-3"><i class="ai-check fs-xl text-primary me-2"></i><span>1 concurrent call per seat</span></li>
                  <li class="d-flex align-items-center mb-3"><i class="ai-check fs-xl text-primary me-2"></i><span>Add as many seats as you need</span></li>
                  <li class="d-flex align-items-center mb-3"><i class="ai-check fs-xl text-primary me-2"></i><span>Keep everyone talking</span></li>
                </ul>
                <div class="btn-group">
                  <div class="input-group mb-3">
                    @{
                        var seats = Model?.ProductOrders?.Where(x => x.ServiceId == Guid.Parse("48eb4627-8692-4a3b-8be1-be64bbeea534")).FirstOrDefault();
                        if (seats is not null && seats.Quantity > 0)
                        {
                            <input id="seats" type="number" class="form-control" name="Quantity" placeholder="Quantity" aria-label="Quantity" aria-describedby="button-addon2" value="@seats?.Quantity" min="0" oninput="validity.valid||(value='1');">
                        }
                        else
                        {
                            <input id="seats" type="number" class="form-control" name="Quantity" placeholder="Quantity" aria-label="Quantity" aria-describedby="button-addon2" min="0" oninput="validity.valid||(value='1');">
                        }
                      }
                    <button class="btn btn-outline-brand-secondary" onclick="AddToCart('Service', '48eb4627-8692-4a3b-8be1-be64bbeea534', $('#seats').val(), this); location.href='/hardware';">Start talking today</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-6 mb-grid-gutter">
            <div class="card border-0 shadow w-100">
              <div class="card-img-top bg-light text-center pt-5 px-grid-gutter">
                <div class="d-flex justify-content-center">
                  <h3 class="text-body">Lines</h3>
                </div>
                <p class="text-body mb-0">Provide multiple phones throughout your space to answer calls wherever you are</p>
              </div>
              <div class="card-body px-grid-gutter py-grid-gutter">
                <div class="d-flex align-items-end py-2 px-4 mb-4"><span class="h2 fw-normal text-muted mb-1 me-2">$</span><span class="price display-2 fw-normal text-primary px-1 me-2">35</span><span class="h3 fs-lg fw-medium text-muted mb-2">per<br>month</span></div>
                <ul class="list-unstyled py-2 mb-4">
                  <li class="d-flex align-items-center mb-3"><i class="ai-check fs-xl text-primary me-2"></i><span>1 concurrent call per line</span></li>
                  <li class="d-flex align-items-center mb-3"><i class="ai-check fs-xl text-primary me-2"></i><span>Add as many phones as you need</span></li>
                  <li class="d-flex align-items-center mb-3"><i class="ai-x fs-xl text-muted me-2"></i><span>No additional users</span></li>
                </ul>
                <div class="btn-group">
                  <div class="input-group mb-3">
                    @{
                          var lines = Model?.ProductOrders?.Where(x => x.ServiceId == Guid.Parse("16e2c639-445b-4ae6-9925-07300318206b")).FirstOrDefault();
                          if (lines is not null && lines.Quantity > 0)
                          {
                              <input id="lines" type="number" class="form-control" name="Quantity" placeholder="Quantity" aria-label="Quantity" aria-describedby="button-addon2" value="@lines?.Quantity" min="0" oninput="validity.valid||(value='1');">
                          }
                          else
                          {
                              <input id="lines" type="number" class="form-control" name="Quantity" placeholder="Quantity" aria-label="Quantity" aria-describedby="button-addon2" min="0" oninput="validity.valid||(value='1');">
                          }
                      }
                    <button class="btn btn-outline-brand-secondary" onclick="AddToCart('Service','16e2c639-445b-4ae6-9925-07300318206b', $('#lines').val(), this); location.href='/hardware';">Start talking today</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
