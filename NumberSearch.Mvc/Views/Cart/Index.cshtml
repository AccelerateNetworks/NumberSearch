@model NumberSearch.Mvc.Models.Cart;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <div class="pricing-header mx-auto mb-3 text-center">
        <h1 class="display-4">Your Cart</h1>
    </div>
    <br />
    @{
        if (Model?.Items.Count() > 0)
        {
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-striped table-borderless table-hover">
                        <tbody>
                            @{
                                foreach (var item in Model?.Items)
                                {
                                    var location = $"{item?.City ?? "Unknown City"}, {item?.State ?? "Unknown State"}";
                                    var formattedNumber = $"({item.NPA}) {item.NXX}-{item.XXXX.ToString("0000")}";
                                    var number = item.DialedNumber;
                                    <tr>
                                        <td scope="row"><h4>@formattedNumber</h4></td>
                                        <td>@Html.Raw(number)</td>
                                        <td>@location</td>
                                        <td>
                                            <a asp-controller="cart" asp-action="remove" asp-route-id="@item.DialedNumber" target="_top">
                                                <input type="button" class="btn btn-outline-danger" value="Remove">
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <hr class="mb-4">
                <a class="btn btn-success btn-lg btn-block" asp-controller="Cart" asp-action="Checkout">Submit your Order</a>
            </div>
            <br />
        }
        else
        {
            <div class="row">

                <div class="alert alert-warning col" role="alert">
                    There are no items in your cart!
                </div>
            </div>
            <br />
        }
    }
</div>