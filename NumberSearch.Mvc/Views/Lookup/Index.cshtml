@model NumberSearch.Mvc.Models.LookupResults;

@{
    ViewData["Title"] = "Bulk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function showHidden() {
        Array.from(document.querySelectorAll('.hidden')).forEach(function (el) {
            el.classList.remove('hidden');
        });
    }
</script>

<section class="text-light" style="background-color: #3279B2">
    <div class="container py-5 py-md-6 py-lg-7 mb-7 text-center">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-11">
                <h1 class="display-3 text-light d-none d-sm-block">Keep your Numbers</h1>
                <h4 class="display-4 text-light d-block d-sm-none">Keep your Numbers</h4>
                <p class="lead text-white">Phone numbers are part of your brand. Bring all of your current numbers with you.</p>
            </div>
        </div>
    </div>
</section>
<div class="bg-light pt-3 pb-3">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p>🚀 Enter multiple phone numbers, we will hunt down any information we can find for each phone number and check if we can port the phone number to our network.</p>
                <p>🔮 We check to see who the underlying telecom provider is and when the phone number was last transferred between telecom providers.</p>
                <p class="m-md-0">🔬 Find out how your caller ID displays on other people's phones!</p>
            </div>
            <div class="offset-xl-2 offset-lg-1"></div>
            <div class="col">
                <form class="justify-content-center">
                    <div class="form-group">
                        <div class="input-group input-group-lg">
                            <textarea class="form-control" aria-label="With textarea" type="text" name="dialedNumber" placeholder="Up to 200 Numbers per Search" style="height:8rem;">@Model?.DialedNumber</textarea>
                        </div>
                        <div class="input-group mx-auto input-group-lg pt-2">
                            <button type="submit" class="btn btn-lg btn-success btn-block" onclick="displayBusyIndicator(this)" asp-controller="Lookup" asp-action="BulkPort">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="pb-3">
    @{
        if (!string.IsNullOrWhiteSpace(Model?.Message))
        {
            <div class="container">
                <div class="pb-3">
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="alert alert-danger" role="alert">
                                @Model?.Message
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        if (Model != null && Model?.Lookups != null && Model.Lookups.Any())
        {
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h1 class="pt-1 pb-1" id="notportable">Lookups</h1>
                    </div>
                    <div class="col">
                        <div class="table-responsive shadow-sm">
                            <table class="table table-striped table-hover table-borderless m-0" id="investigated">
                                <thead>
                                    <tr>
                                        <th>
                                            Phone Number
                                        </th>
                                        <th class="d-sm-none">
                                            Related Info
                                        </th>
                                        <th class="d-none d-sm-table-cell">
                                            Last Port Date
                                        </th>
                                        <th class="d-none d-sm-table-cell">
                                            Caller Name
                                        </th>
                                        <th class="d-none d-lg-table-cell">
                                            Local Routing #
                                        </th>
                                        <th class="d-none d-md-table-cell">
                                            Carrier
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var number in Model.Lookups)
                                        {
                                            <tr>
                                                <td>
                                                    <h4>
                                                        @number?.tn

                                                    </h4>
                                                    <p class="d-lg-none m-0">
                                                        Local Routing #
                                                    </p>
                                                    <h6 class="d-lg-none m-0">@number?.lrn</h6>
                                                </td>
                                                <td>
                                                    @number?.LastPorted
                                                    <p class="d-sm-none">
                                                        @number?.LIDBName
                                                        -
                                                        @number?.spid
                                                        @number?.lec
                                                        -
                                                        @number?.lectype
                                                    </p>
                                                </td>
                                                <td class="d-none d-sm-table-cell">
                                                    @number?.LIDBName
                                                    <p class="d-md-none">
                                                        -
                                                        @number?.spid
                                                        @number?.lec
                                                        -
                                                        @number?.lectype
                                                    </p>
                                                </td>
                                                <td class="d-none d-lg-table-cell">
                                                    <h4>@number?.lrn</h4>
                                                </td>
                                                <td class="d-none d-md-table-cell">
                                                    <p>
                                                        @number?.spid
                                                        @number?.lec
                                                        -
                                                        @number?.lectype
                                                    </p>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        if (Model != null && Model?.NotPortable != null && Model.NotPortable.Any())
        {
            <div class="container">
                <div class="row mt-3">
                    <div class="col">
                        <div class="btn-group">
                            @if (Model?.Portable is not null && Model.Portable.Any())
                            {
                                <a class="btn btn-success text-light" href="#portable">@Model.Portable.Count() Local Numbers</a>
                            }
                            @if (Model?.Wireless is not null && Model.Wireless.Any())
                            {
                                <a class="btn btn-warning text-light" href="#wireless">@Model.Wireless.Count()  Wireless</a>
                            }
                            @if (Model?.NotPortable is not null && Model.NotPortable.Any())
                            {
                                <a class="btn btn-danger" href="#notportable">@Model.NotPortable.Count() Not Portable</a>
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h1 class="pt-1 pb-1" id="notportable">Not Portable</h1>
                    </div>
                    <div class="col-12">
                        <div class="alert alert-danger" role="alert">
                            These phone numbers cannot be ported to our network!
                        </div>
                    </div>
                </div>
