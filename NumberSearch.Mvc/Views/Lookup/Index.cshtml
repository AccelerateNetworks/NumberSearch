@model NumberSearch.Mvc.Models.LookupResults;

@{
    ViewData["Title"] = "Bulk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <div class="pricing-header mx-auto p-2 text-center">
        <h1 class="display-4">Bulk Phone Numbers</h1>
    </div>
    <br />
</div>
<div class="bg-light pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p>🚀 Enter a multiple phone numbers and we'll hunt down any information we can find for each number and check if we can port the number to our network.</p>
                <p>🔮 We check to see who the underlying telecom provider is and when the phone number was last transferred between telecom providers.</p>
                <p>🔬 Find out how your caller ID displays on other people's phones!</p>
            </div>
            <div class="offset-xl-2 offset-lg-1"></div>
            <div class="col">
                <form class="justify-content-center">
                    <div class="form-group">
                        <div class="input-group input-group-lg">
                            <div class="input-group-prepend">
                                <span class="input-group-text">+1</span>
                            </div>
                            <textarea class="form-control" aria-label="With textarea" type="text" name="dialedNumber" placeholder="Enter Phone Numbers">@Model?.DialedNumber</textarea>
                        </div>
                        <div class="input-group mx-auto input-group-lg pt-2">
                            <button type="submit" class="btn btn-lg btn-success btn-block" onclick="displayBusyIndicator()" asp-controller="Lookup" asp-action="Index">Investigate</button>
                            <button type="submit" class="btn btn-lg btn-info btn-block" onclick="displayBusyIndicator()" asp-controller="Lookup" asp-action="BulkPort">Transfer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <partial name="_LoadingPartial" />
    <div class="pt-5 pb-5">
        @{
            var count = 0;
            count += Model?.NotPortable is not null ? Model.NotPortable.Count() : 0;
            count += Model?.Portable is not null ? Model.Portable.Count() : 0;
            count += Model?.Wireless is not null ? Model.Wireless.Count() : 0;
            count += Model?.Lookups is not null ? Model.Lookups.Count() : 0;
            if (Model is not null && count > 0)
            {
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-info" role="alert">
                            Processed @count Phone Numbers.
                        </div>
                    </div>
                </div>
            }
        }
        @{
            if (Model != null && Model?.Lookups != null && Model.Lookups.Any())
            {
                <div class="table-responsive shadow-sm mb-4">
                    <table class="table table-striped table-hover table-borderless" id="investigated">
                        <thead>
                            <tr>
                                <th>
                                    Phone Number
                                </th>
                                <th>
                                    Last Port Date
                                </th>
                                <th>
                                    Caller Name
                                </th>
                                <th>
                                    Local Routing #
                                </th>
                                <th>
                                    Carrier
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var number in Model.Lookups)
                                {
                                    <tr>
                                        <td>
                                            <h4>@number?.tn</h4>
                                        </td>
                                        <td>
                                            @number?.LastPorted
                                        </td>
                                        <td>
                                            @number?.LIDBName
                                        </td>
                                        <td>
                                            <h4>@number?.lrn</h4>
                                        </td>
                                        <td>
                                            <p>
                                                @number?.spid
                                                -
                                                @number?.lec
                                                -
                                                @number?.lectype
                                            </p>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
            if (Model != null && Model?.NotPortable != null && Model.NotPortable.Any())
            {
                <div class="row mt-3">
                    <div class="col">
                        <div class="btn-group-lg">
                            @if (Model?.Portable is not null && Model.Portable.Any())
                            {
                                <a class="btn btn-success text-light" href="#portable">Local Numbers</a>
                            }
                            @if (Model?.Wireless is not null && Model.Wireless.Any())
                            {
                                <a class="btn btn-warning text-light" href="#wireless">Wireless</a>
                            }
                            @if (Model?.NotPortable is not null && Model.NotPortable.Any())
                            {
                                <a class="btn btn-danger" href="#notportable">Not Portable</a>
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h1 class="display-2" id="notportable">Not Portable</h1>
                    </div>
                    <div class="col-12">
                        <div class="alert alert-danger" role="alert">
                            These phone numbers cannot be ported to our network!
                        </div>
                    </div>
                </div>
                <div class="table-responsive shadow-sm">
                    <table class="table table-striped table-borderless table-hover">
                        <tbody>
                            @{
                                foreach (var number in Model.NotPortable)
                                {
                                    <tr class="table-danger">
                                        <td scope="row"><h4>@number</h4></td>
                                        <td class="d-none d-sm-table-cell"></td>
                                        <td class="d-none d-sm-table-cell"></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
            if (Model != null && Model?.Portable != null && Model.Portable.Any())
            {
                <div class="row mt-3">
                    <div class="col">
                        <div class="btn-group-lg">
                            @if (Model?.Portable is not null && Model.Portable.Any())
                            {
                                <a class="btn btn-success text-light" href="#portable">Local Numbers</a>
                            }
                            @if (Model?.Wireless is not null && Model.Wireless.Any())
                            {
                                <a class="btn btn-warning text-light" href="#wireless">Wireless</a>
                            }
                            @if (Model?.NotPortable is not null && Model.NotPortable.Any())
                            {
                                <a class="btn btn-danger" href="#notportable">Not Portable</a>
                            }
                        </div>
                    </div>
                </div>
                var alreadyInCart = Model?.Cart?.PortedPhoneNumbers.ToDictionary(x => x?.PortedDialedNumber, x => x);
                <div class="row">
                    <div class="col-12">
                        <h1 class="display-2" id="portable">Local Numbers</h1>
                    </div>
                    <div class="col-12">
                        <div class="alert alert-success" role="alert">
                            These phone numbers can be ported to our network!
                        </div>
                    </div>
                </div>
                <div class="table-responsive shadow-sm mb-4">
                    <table class="table table-striped table-borderless table-hover">
                        <tbody>
                            <tr>
                                <th>
                                    Phone Number
                                </th>
                                <th>
                                    Last Port Date
                                </th>
                                <th>
                                    Caller Name
                                </th>
                                <th>
                                    Local Routing #
                                </th>
                                <th>
                                    Carrier
                                </th>
                                <th>

                                </th>
                            </tr>
                            @{
                                foreach (var number in Model.Portable)
                                {
                                    <tr>
                                        <td>
                                            <h4>@number?.LrnLookup?.tn.Substring(1)</h4>
                                        </td>
                                        <td>
                                            @number?.LrnLookup?.LastPorted
                                        </td>
                                        <td>
                                            @number?.LrnLookup?.LIDBName
                                        </td>
                                        <td>
                                            <h4>@number?.LrnLookup?.lrn.Substring(1)</h4>
                                        </td>
                                        <td>
                                            <p>
                                                @number?.LrnLookup?.spid
                                                -
                                                @number?.LrnLookup?.lec
                                                -
                                                @number?.LrnLookup?.lectype
                                            </p>
                                        </td>
                                        <td>
                                            @{
                                                if (alreadyInCart.TryGetValue(number.PortedDialedNumber, out var _))
                                                {
                                                    <button onclick="RemoveFromCart('PortedPhoneNumber', '@number.PortedDialedNumber', 1, this)" class="btn btn-outline-danger">Remove</button>
                                                }
                                                else
                                                {
                                                    <button onclick="AddToCart('PortedPhoneNumber', '@number.PortedDialedNumber', 1, this)" class="btn btn-outline-primary">Add to Cart</button>
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
            if (Model != null && Model?.Wireless != null && Model.Wireless.Any())
            {
                var alreadyInCart = Model?.Cart?.PortedPhoneNumbers.ToDictionary(x => x?.PortedDialedNumber, x => x);
                <div class="row mt-3">
                    <div class="col">
                        <div class="btn-group-lg">
                            @if (Model?.Portable is not null && Model.Portable.Any())
                            {
                                <a class="btn btn-success text-light" href="#portable">Local Numbers</a>
                            }
                            @if (Model?.Wireless is not null && Model.Wireless.Any())
                            {
                                <a class="btn btn-warning text-light" href="#wireless">Wireless</a>
                            }
                            @if (Model?.NotPortable is not null && Model.NotPortable.Any())
                            {
                                <a class="btn btn-danger" href="#notportable">Not Portable</a>
                            }
                        </div>
                    </div>
                </div>
                <h1 class="display-2" id="wireless">Wireless Numbers</h1>
                <div class="alert alert-warning col-12" role="alert">
                    These <strong>wireless</strong> phone numbers can be ported to our network!
                </div>
                <div class="table-responsive shadow-sm pb-4">
                    <table class="table table-striped table-borderless table-hover">
                        <tbody>
                            <tr>
                                <th>
                                    Phone Number
                                </th>
                                <th>
                                    Last Port Date
                                </th>
                                <th>
                                    Caller Name
                                </th>
                                <th>
                                    Local Routing #
                                </th>
                                <th>
                                    Carrier
                                </th>
                                <th>

                                </th>
                            </tr>
                            @{
                                foreach (var number in Model.Wireless)
                                {
                                    <tr>
                                        <td>
                                            <h4>@number?.LrnLookup?.tn</h4>
                                        </td>
                                        <td>
                                            @number?.LrnLookup?.LastPorted
                                        </td>
                                        <td>
                                            @number?.LrnLookup?.LIDBName
                                        </td>
                                        <td>
                                            <h4>@number?.LrnLookup?.lrn</h4>
                                        </td>
                                        <td>
                                            <p>
                                                @number?.LrnLookup?.spid
                                                -
                                                @number?.LrnLookup?.lec
                                                -
                                                @number?.LrnLookup?.lectype
                                            </p>
                                        </td>
                                        <td>
                                            @{
                                                if (alreadyInCart.TryGetValue(number.PortedDialedNumber, out var _))
                                                {
                                                    <button onclick="RemoveFromCart('PortedPhoneNumber', '@number.PortedDialedNumber', 1, this)" class="btn btn-outline-danger">Remove</button>
                                                }
                                                else
                                                {
                                                    <button onclick="AddToCart('PortedPhoneNumber', '@number.PortedDialedNumber', 1, this)" class="btn btn-outline-primary">Add to Cart</button>
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <div class="btn-group-lg">
                            @if (Model?.Portable is not null && Model.Portable.Any())
                            {
                                <a class="btn btn-success text-light" href="#portable">Local Numbers</a>
                            }
                            @if (Model?.Wireless is not null && Model.Wireless.Any())
                            {
                                <a class="btn btn-warning text-light" href="#wireless">Wireless</a>
                            }
                            @if (Model?.NotPortable is not null && Model.NotPortable.Any())
                            {
                                <a class="btn btn-danger" href="#notportable">Not Portable</a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>