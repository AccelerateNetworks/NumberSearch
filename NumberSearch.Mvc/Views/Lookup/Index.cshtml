                                                <p class="m-0 d-none d-md-block">
                                                    LEC
                                                </p>
                                                <p class="m-0 d-none d-md-block">
                                                    @number?.LrnLookup?.lec
                                                </p>
                                                <p class="m-0 d-none d-md-block">LEC Type</p>
                                                <p class="m-0 d-none d-md-block">
                                                    @number?.LrnLookup?.lectype
                                                </p>
                                            }
