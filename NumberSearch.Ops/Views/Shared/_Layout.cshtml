<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Accelerate Networks</title>
    <link rel="icon" href="~/images/scaled/favicon-194x194.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-dark sticky-top bg-light flex-md-nowrap p-0">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0 p-3" href="/">
            <img src="~/images/scaled/accelerate.png" alt="Accelerate Networks" class="img-fluid" style="width: 10rem;">
        </a>
        <ul class="navbar ml-auto my-auto">
            <a class="btn btn-danger" target="_blank" href="https://github.com/AccelerateNetworks/NumberSearch/issues/new/choose">🐛 File a Bug </a>
            <partial name="_LoginPartial" />
            @*This is very silly*@
            <a class="invisible" target="_blank" href="https://github.com/AccelerateNetworks/NumberSearch/issues/new/choose">🐛</a>
        </ul>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-white sidebar collapse">
                <div class="sidebar-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Identity/Account/Login">
                                🗺️   Apps
                            </a>
                        </li>
                        @if (User.IsInRole("Support") || User.IsInRole("Sales"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" " href="/Home/Order">
                                    🛒   Orders
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Home/Quotes">
                                    ✨   Quotes
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Support"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Home/TaxRates">
                                    ⚖️   Tax Rates
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Home/Emails/">
                                    📧    Sent Emails
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Numbers/">
                                    ☎️   Available Numbers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Home/NumberOrders/">
                                    🧾   Purchased Numbers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Home/NumbersToVerify/">
                                    🛎️   Numbers To Verify
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Home/PortRequests/">
                                    🚢   Port Requests
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Home/OwnedNumbers/">
                                    🏢   Owned Numbers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Home/EmergencyInformation">
                                    🚨   Emergency Information
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Products">
                                    🎁 Hardware
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/ProductShipments">
                                    📦 Shipments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Home/Coupons">
                                    ✨ Coupons
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Home/Ingests/">
                                    💨   Ingest Configuration
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Users">
                                    🧑‍🤝‍🧑   Users
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Roles">
                                    👔   Roles
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Carriers">
                                    📯   Carriers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Lookups">
                                    🥠   Lookups
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
