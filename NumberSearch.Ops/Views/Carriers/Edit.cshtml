@model NumberSearch.Ops.EFModels.Carrier

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4 p-3">📯 Edit Carrier</h1>

@Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarrierId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ocn" class="control-label"></label>
                <input asp-for="Ocn" class="form-control" />
                <span asp-validation-for="Ocn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lec" class="control-label"></label>
                <input asp-for="Lec" class="form-control" />
                <span asp-validation-for="Lec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lectype" class="control-label"></label>
                <input asp-for="Lectype" class="form-control" />
                <span asp-validation-for="Lectype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spid" class="control-label"></label>
                <input asp-for="Spid" class="form-control" />
                <span asp-validation-for="Spid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ratecenter" class="control-label"></label>
                <input asp-for="Ratecenter" class="form-control" />
                <span asp-validation-for="Ratecenter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastUpdated" class="control-label"></label>
                <input asp-for="LastUpdated" class="form-control" type="datetime" readonly/>
                <span asp-validation-for="LastUpdated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
