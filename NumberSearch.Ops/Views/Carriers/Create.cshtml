@model AccelerateNetworks.Operations.Carrier

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4 p-3">📯 Create Carrier</h1>
@Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-select mr-sm-2" id="name" required>
                    <option selected>Choose...</option>
                    <option value="Landline">Landline</option>
                    <option value="Wireless">Wireless</option>
                    <option value="VoIP Reseller">VoIP Reseller</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ocn" class="control-label"></label>
                <input asp-for="Ocn" class="form-control" />
                <span asp-validation-for="Ocn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lec" class="control-label"></label>
                <input asp-for="Lec" class="form-control" />
                <span asp-validation-for="Lec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lectype" class="control-label"></label>
                <input asp-for="Lectype" class="form-control" />
                <span asp-validation-for="Lectype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spid" class="control-label"></label>
                <input asp-for="Spid" class="form-control" />
                <span asp-validation-for="Spid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogoLink" class="control-label"></label>
                <input asp-for="LogoLink" class="form-control" />
                <span asp-validation-for="LogoLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3 mb-3" />
            </div>
        </form>
    </div>
</div>
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
