@model NumberSearch.Ops.EFModels.Carrier

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4 p-3">📯 Create Carrier</h1>
@Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
