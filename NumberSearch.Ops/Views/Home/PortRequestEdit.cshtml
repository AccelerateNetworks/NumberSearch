@model NumberSearch.Ops.PortRequestResult
@{
    ViewData["Title"] = "Port Request";
}
<br />
<h1 class="display-4">Port Request</h1>
<br />
<div class="pb-3">
    <a class="btn btn-primary" href="/Home/PortRequests">Return to List</a>
    <a href="https://acceleratenetworks.com/cart/order/@Model.Request.OrderId" class="btn btn-outline-primary">
        Order
    </a>
</div>
<form href="Home/OwnedNumbers/@Model.Request.OrderId" method="post" class="needs-validation mb-3">
    <div class="row">
        <input asp-for="Request.OrderId" type="text" value="@Model?.Request?.OrderId" hidden />
        <div class="col-md-6 mb-3">
            <label for="billingPhone">Current Billing Phone Number</label>
            <input asp-for="Request.BillingPhone" type="text" value="@Model?.Request?.BillingPhone" class="form-control" id="BillingPhone" placeholder="2061234567" required=""
                   title="Also known as the BTN. This is the number that is normally provided on a copy of your bill or statement in the upper right corner or is the first number listed on the bill.">
            <div class="invalid-feedback">
                Valid first name is required.
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <label for="locationType">Location Type</label>
            <select asp-for="Request.LocationType" class="custom-select" title="Designates if this is a business address or a residential address.">
                @{
                    if (Model?.Request?.LocationType == "Busniess")
                    {
                        <option value="Business" selected>Business</option>
                        <option value="Residential">Residential</option>
                    }
                    else
                    {
                        <option value="Business">Business</option>
                        <option value="Residential" selected>Residential</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="partialPort">Business Contact</label>
            <input asp-for="Request.BusinessContact" type="text" value="@Model?.Request?.BusinessContact" class="form-control" id="businessContact" placeholder="Alexander Graham-Bell" title="This is the name of the owner or contact who will be submitting the port order." required="">
            <div class="invalid-feedback">
                Valid business contact name is required.
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <label for="partialPortDescription">Business Name</label>
            <input asp-for="Request.BusinessName" type="text" value="@Model?.Request?.BusinessName" class="form-control" id="businessName" placeholder="American Telegraf and Telephone Company" title="Name of the business associated with the numbers being ported." required="">
            <div class="invalid-feedback">
                Valid business name is required.
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="accountNumber">Current Account Number</label>
            <input asp-for="Request.ProviderAccountNumber" type="text" value="@Model?.Request?.ProviderAccountNumber" class="form-control" id="accountNumber" placeholder="1234567891011" title="The account number is usually found on the invoice or a copy of a bill from your current provider." required="">
            <div class="invalid-feedback">
                Please enter your account number.
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <label for="pin">Account PIN or Password</label>
            <input asp-for="Request.ProviderPIN" type="text" value="@Model?.Request?.ProviderPIN" class="form-control" id="pin" placeholder="1234" title="The PIN or password for the existing account." required="">
            <div class="invalid-feedback">
                Valid PIN is required.
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label for="address">Service Address</label>
        <input asp-for="Request.Address" type="text" value="@Model?.Request?.Address" class="form-control" id="address" placeholder="1234 Main St" title="The physical address of where these phone numbers are being used. This information is also on file with your current provider." required="">
        <div class="invalid-feedback">
            Please enter your shipping address.
        </div>
    </div>

    <div class="mb-3">
        <label for="address2">Service Address 2 <span class="text-muted">(Optional)</span></label>
        <input asp-for="Request.Address2" type="text" value="@Model?.Request?.Address2" class="form-control" id="address2" title="The city of the service address listed above." placeholder="Apartment or suite">
    </div>

    <div class="row">
        <div class="col-md-5 mb-3">
            <label for="address">Service City</label>
            <input asp-for="Request.City" type="text" value="@Model?.Request?.City" class="form-control" id="city" placeholder="Seattle" title="The physical address of where these phone numbers are being used. This information is also on file with your current provider." required="">
            <div class="invalid-feedback">
                Please enter a valid city.
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <label for="state">Service State</label>
            <select asp-for="Request.State" class="custom-select d-block w-100" id="state" title="The state of the service address listed above." required="">
                <option value="">Choose...</option>
                @{
                    var states = new string[] { "Alabama",
                                                        "Alaska",
                                                        "Arizona",
                                                        "Arkansas",
                                                        "California",
                                                        "Colorado",
                                                        "Connecticut",
                                                        "Delaware",
                                                        "Florida",
                                                        "Georgia",
                                                        "Hawaii",
                                                        "Idaho",
                                                        "Illinois",
                                                        "Indiana",
                                                        "Iowa",
                                                        "Kansas",
                                                        "Kentucky",
                                                        "Louisiana",
                                                        "Maine",
                                                        "Maryland",
                                                        "Massachusetts",
                                                        "Michigan",
                                                        "Minnesota",
                                                        "Mississippi",
                                                        "Missouri",
                                                        "Montana",
                                                        "Nebraska",
                                                        "Nevada",
                                                        "New Hampshire",
                                                        "New Jersey",
                                                        "New Mexico",
                                                        "New York",
                                                        "North Carolina",
                                                        "North Dakota",
                                                        "Ohio",
                                                        "Oklahoma",
                                                        "Oregon",
                                                        "Pennsylvania",
                                                        "Rhode Island",
                                                        "South Carolina",
                                                        "South Dakota",
                                                        "Tennessee",
                                                        "Texas",
                                                        "Utah",
                                                        "Vermont",
                                                        "Virginia",
                                                        "Washington",
                                                        "West Virginia",
                                                        "Wisconsin",
                                                        "Wyoming"
                                                        };

                    foreach (var state in states)
                    {
                        if (Model.Request.State == state)
                        {
                            <option selected>@state</option>
                        }
                        else
                        {
                            <option>@state</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="col-md-3 mb-3">
            <label for="zip">Service Zip</label>
            <input asp-for="Request.Zip" type="text" value="@Model?.Request?.Zip" class="form-control" id="zip" placeholder="98199" title="The five digit ZIP code of the service address listed above." required>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="partialPort">Partial Port</label>
            <select asp-for="Request.PartialPort" class="custom-select" title="Designates if this is a business address or a residential address.">
                @{
                    if (Model.Request.PartialPort == true)
                    {
                        <option value="true" selected>Yes</option>
                        <option value="false">No</option>
                    }
                    else
                    {
                        <option value="true">Yes</option>
                        <option value="false" selected>No</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-6 mb-3">
            <label for="partialPortDescription">Partial Port Description</label>
            <input asp-for="Request.PartialPortDescription" type="text" value="@Model?.Request?.PartialPortDescription" class="form-control" id="partialPortDescription" placeholder="Bell" title="Describe what services the old carrier should leave alone. Contact the old carrier to confirm they will leave these services intact." required="">
            <div class="invalid-feedback">
                Valid last name is required.
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="wirelessNumber">Wireless Number</label>
            <select asp-for="Request.WirelessNumber" class="custom-select" id="wirelessNumber" title="Set to 'Yes' if this is a wireless or cellphone number being ported.">
                @{
                    if (Model?.Request.WirelessNumber == true)
                    {
                        <option value="true" selected>Yes</option>
                        <option value="false">No</option>
                    }
                    else
                    {
                        <option value="true">Yes</option>
                        <option value="false" selected>No</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-6 mb-3">
            <label for="billingPhone">Caller ID<span class="text-muted"> (15 Character Maximum)</span></label>
            <input asp-for="Request.CallerId" type="text" value="@Model?.Request?.CallerId" class="form-control" id="billingPhone" title="Sets Caller ID (aka CNAM) for all numbers in this port order, 15 character limit." placeholder="Alexander" required="">
            <div class="invalid-feedback">
                Valid first name is required.
            </div>
        </div>
    </div>
    <div class="row">
        @*<div class="col-md-6">
                <label for="inputGroupFile02">An Image of Your Current Bill</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input asp-for="Request.BillImage" type="file" class="custom-file-input" id="inputGroupFile02" />
                        <span asp-validation-for="Request.BillImage"></span>
                        <label class="custom-file-label" for="inputGroupFile02">Choose file</label>
                    </div>
                </div>
            </div>*@
        <div class="col-md-6 mb-3">
            <label for="locationType">Numbers to Port</label>
            @{
                foreach (var number in Model?.Numbers)
                {
                    <h4>@number.PortedDialedNumber</h4>
                }
            }
        </div>
    </div>
    <hr class="mb-4">
    <button type="submit" class="btn btn-danger">Update</button>
    <br />
</form>
<br />
