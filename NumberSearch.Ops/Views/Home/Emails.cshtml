@model IEnumerable<NumberSearch.DataAccess.Email>
@{
    ViewData["Title"] = "Sent Emails";
}
<h1 class="display-4 p-3">📧 Sent Emails</h1>
<div class="table-responsive">
    <table class="table table-striped table-borderless table-hover" id="table">
        <thead>
            <tr>
                <th>
                    Date Sent
                </th>
                <th>
                    Routing
                </th>
                <th>
                    Message
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var email in Model)
                {
                    <tr>
                        <td scope="row" data-order="@email.DateSent.Ticks">
                            <a href="https://acceleratenetworks.com/cart/order/@email.OrderId" class="btn btn-primary">
                                Order
                            </a>
                            <h4 class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge badge-info badge-pill">
                                    @email.DateSent
                                </span>
                            </h4>
                            <div class="mt-3">
                                @{
                                    if (email.Completed)
                                    {
                                        <h4><span class="badge badge-success">Completed</span></h4>
                                    }
                                    else
                                    {
                                        <h4><span class="badge badge-danger">Failed</span></h4>
                                    }
                                }
                            </div>

                        </td>
                        <td>
                            <strong>Email</strong>
                            <p>@email.PrimaryEmailAddress</p>
                            <strong>CC</strong>
                            <p>@email.CarbonCopy</p>
                            <strong>Subject</strong>
                            <p>@email.Subject</p>
                        </td>
                        <td>
                            <strong>Body</strong>
                            <p>@Html.Raw(email.MessageBody)</p>
                        </td>
                        <td>
                            @{
                                if (!email.Completed)
                                {
                                    <a href="/Home/Emails/@email.OrderId" class="btn btn-danger">Force Send</a>
                                }
                                else
                                {
                                    <a class="btn btn-danger disabled">Force Send</a>
                                }
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>