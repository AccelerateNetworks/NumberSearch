@model IEnumerable<NumberSearch.DataAccess.PortRequest>
@{
    ViewData["Title"] = "Port Requests";
}
<br />
<h1 class="display-4">Port Requests</h1>
<br />
<div class="pb-3">
    <ul class="nav nav-pills nav-fill nav-justified">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Numbers">Numbers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="NumberOrders">Number Orders</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Emails">Sent Emails</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-controller="Home" asp-action="PortRequests">Port Requests</a>
        </li>
    </ul>
</div>
<div class="table-responsive">
    <table class="table table-striped table-borderless table-hover" id="table">
        <thead>
            <tr>
                <th>
                    Date Ordered
                </th>
                <th>Customer Information</th>
                <th>Carrier Information</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var port in Model)
                {
                    <tr>
                        <td scope="row" data-order="@port.DateSubmitted.Ticks">
                            <a href="https://acceleratenetworks.com/cart/order/@port.OrderId" class="btn btn-primary">
                                View Order
                            </a>
                            <h4 class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge badge-info badge-pill">
                                    @port.DateSubmitted
                                </span>
                            </h4>
                        </td>
                        <td scope="col">
                            <strong>Business Contact</strong>
                            <p>@port.BusinessContact</p>
                            <strong>Business Name</strong>
                            <p>@port.BusinessName</p>
                            <strong>Address</strong>
                            <p>
                                @port.Address

                                @port.Address2

                                @port.City

                                @port.State

                                @port.Zip
                            </p>
                        </td>
                        <td scope="col">
                            <strong>Billing Phone Number</strong>
                            <p>@port.BillingPhone</p>
                            <strong>Caller Id</strong>
                            <p>@port.CallerId</p>
                            <strong>Location Type</strong>
                            <p>@port.LocationType</p>
                            <strong>Partial Port</strong>
                            <p>@port.PartialPort</p>
                            <strong>Partial Port Description</strong>
                            <p>@port.PartialPortDescription</p>
                            <strong>Provider Account Number</strong>
                            <p>@port.ProviderAccountNumber</p>
                            <strong>Provider PIN</strong>
                            <p>@port.ProviderPIN</p>
                            <strong>
                                Wireless Number
                            </strong>
                            <p>@port.WirelessNumber</p>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>