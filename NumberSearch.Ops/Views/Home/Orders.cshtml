@model IEnumerable<NumberSearch.DataAccess.Order>
@{
    ViewData["Title"] = "Orders";
}
<br />
<h1 class="display-4">Orders</h1>
<br />
<div class="table-responsive">
    <table class="table table-striped table-borderless table-hover">
        <thead>
            <tr>
                <th scope="col">
                    Date Ordered
                </th>
                <th scope="col">
                    Customer Information
                </th>
                <th scope="col">
                    Products Ordered
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var order in Model)
                {
                    var businessName = string.IsNullOrWhiteSpace(order.BusinessName) ? "Consumer" : order.BusinessName;
                    <tr>
                        <th scope="row">
                            <a href="https://acceleratenetworks.com/cart/order/@order.OrderId" class="btn btn-primary">
                                View Order
                            </a>
                            <h4 class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge badge-info badge-pill">
                                    @order.DateSubmitted
                                </span>
                            </h4>
                        </th>
                        <td>
                            <strong>Business Name</strong>
                            <p>@businessName</p>
                            <strong>Customer Name</strong>
                            <p>
                                @order.FirstName
                                @order.LastName
                            </p>
                            <strong>Email</strong>
                            <p>@order.Email</p>
                            <strong>Address</strong>
                            <p>
                                @order.Address

                                @order.Address2

                                @order.City

                                @order.State

                                @order.Zip
                            </p>
                        </td>
                        <td>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>