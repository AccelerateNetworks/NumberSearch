@model AccelerateNetworks.Operations.Product

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4 p-3">🎁 Create Product</h1>
@Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check form-switch mt-1">
                    <input class="form-check-input" type="checkbox" asp-for="Public" role="switch" id="public">
                    <label class="form-check-label" for="public">@Html.DisplayNameFor(model => model.Public)</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="QuantityAvailable" class="control-label"></label>
                <input asp-for="QuantityAvailable" class="form-control" />
                <span asp-validation-for="QuantityAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupportLink" class="control-label"></label>
                <input asp-for="SupportLink" class="form-control" />
                <span asp-validation-for="SupportLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayPriority" class="control-label"></label>
                <input asp-for="DisplayPriority" class="form-control" type="number" />
                <span asp-validation-for="DisplayPriority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorPartNumber" class="control-label"></label>
                <input asp-for="VendorPartNumber" class="form-control" />
                <span asp-validation-for="VendorPartNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select class="form-select" id="inputGroupSelect01" asp-for="Type" required>
                    <option value="Phone" selected>Phone</option>
                    <option value="Accessory">Accessory</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3 mb-3" />
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
<a asp-action="Index" class="btn btn-outline-primary">Back to List</a>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
